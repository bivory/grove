{
  "description": "grove compound learning gate hooks - enforces structured reflection at ticket boundaries",
  "hooks": {
    "SessionStart": [{
      "hooks": [{
        "type": "command",
        "command": "grove hook session-start",
        "timeout": 5
      }]
    }],
    "PreToolUse": [{
      "matcher": "Bash",
      "hooks": [{
        "type": "command",
        "command": "grove hook pre-tool-use",
        "timeout": 5
      }]
    }],
    "PostToolUse": [{
      "matcher": "Bash",
      "hooks": [{
        "type": "command",
        "command": "grove hook post-tool-use",
        "timeout": 5
      }]
    }],
    "Stop": [{
      "hooks": [{
        "type": "command",
        "command": "grove hook stop",
        "timeout": 5
      }]
    }],
    "SessionEnd": [{
      "hooks": [{
        "type": "command",
        "command": "grove hook session-end",
        "timeout": 5
      }]
    }]
  }
}
