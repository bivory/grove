{
  "name": "grove",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspaces/grove",

  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "serayuzgur.crates",
        "vadimcn.vscode-lldb",
        "streetsidesoftware.code-spell-checker",
        "DavidAnson.vscode-markdownlint"
      ],
      "settings": {
        "rust-analyzer.checkOnSave.command": "clippy",
        "editor.formatOnSave": true,
        "[rust]": {
          "editor.defaultFormatter": "rust-lang.rust-analyzer"
        },
        "files.watcherExclude": {
          "**/target/**": true
        }
      }
    }
  },

  "postCreateCommand": "/workspaces/grove/.devcontainer/setup.sh",

  "remoteEnv": {
    "RUST_LOG": "info"
  },

  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached",
    "source=grove-cargo-cache,target=/home/vscode/.cargo,type=volume",
    "source=grove-target-cache,target=/workspaces/grove/target,type=volume",
    "source=${localWorkspaceFolder}/.claude-devcontainer,target=/home/vscode/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.total-recall,target=/home/vscode/.total-recall,type=bind,consistency=cached"
  ]
}
